{% extends "base.html.twig" %}

{% block title %}Login
{% endblock %}

{% block body %}
	<main class="w-full mt-5 flex flex-col justify-start content-center container mx-auto h-screen">
		{% if error %}
			<div class="p-5 font-bold w-1/3 bg-red-200 text-red-900 mx-auto rounded-md border-2 border-red-400">
				{{ error.messageKey|trans(error.messageData, 'security') }}
			</div>
		{% endif %}

		<div class="container mx-auto p-4 flex justify-center align-center mt-3">
			<form method="post">
				<div class="mb-6">
					<label class="block text-gray-800 required" for="login_email">Email</label>
					<input type="text" value=" {{ last_username }} " id="login_email" name="email" required="required" class="mt-1 w-full"/>
				</div>
				<div class="mb-3">
					<label class="block text-gray-800 required" for="login_password">Heslo</label>
					<input type="password" id="login_password" name="password" required="required" class="mt-1 w-full"/>
				</div>
				<div class="mb-5">
					<div class="inline-flex items-center">
						<input type="checkbox" id="login_remember_me" name="_remember_me" class="mr-2"/>
						<label class="block text-gray-800" for="_remember_me">Zapamatovat si mÄ›</label>
					</div>
				</div>
				<input type="hidden" name="_csrf_token" class="mt-1 w-full" value="{{ csrf_token('authenticate') }}"/>
				<div class="mt-3">
					<button type="submit" id="login_submit" name="login" class="btn btn-red">Login</button>
				</div>

			</form>
		</div>
	</main>
{% endblock %}
